<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="LoginForm" type="com.form.LoginForm"/>
        <form-bean name="Insert2DBForm" type="com.form.Insert2DBForm"/>

    </form-beans>
    <action-mappings>
        <action input="/Login.do" name="LoginForm" path="/Login" scope="session" type="com.action.Action">
            <forward name="success" path="/Success.jsp" />
            <forward name="failure" path="/Error.jsp" />
        </action>
        <action input="/NewLogin" name="Insert2DBForm" path="/NewLogin" scope="session" type="com.action.Insert2DB">

            <forward name="success" path="/retrive.do" />
        </action>
        <action path="/retrive" type="com.action.Retrive">
            <forward name="success" path="/Sucessfull.jsp" />
        </action>
        <action path="/fun" type="com.action.Retrive">
            <forward name="success" path="/Sucessfull.jsp" />
        </action>

        <action path="/search" type="com.action.Search">
            <forward name="failure" path="/Result.jsp" />
        </action>
    </action-mappings>
</struts-config>